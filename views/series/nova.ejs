<% include ../partials/header %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <form method="post">
             <div class="form-group">
             <h2>Nova Série</h2>
                <label for="name">Nome da Série</label>
                <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Informe o nome da série">
                <small id="nameHelp" class="form-text text-muted">Nome da série a ser salvo</small>
                <% if(errors && errors.indexOf('name')>=0){ %>
                <small id="nameHelp" class="form-text text-muted">Por favor insira o nome da série</small>
                <% } %>             
             </div>
               <div class="form-group">
                    <label for="status">Situação</label>
                    <select class="form-control" id="status" name="status">
                    <option value="to-watch">Para assistir</option>
                    <option value="watching">Assitindo</option>
                    <option value="watched">Assistido</option>
                    </select>
                </div>
            <button class="btn btn-primary mb-2">Salvar</button>
          </div>
        </div>
      </div>
    </section>

    <% include ../partials/footer %>